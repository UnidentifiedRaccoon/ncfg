{
  "kind": "collectionType",
  "collectionName": "services",
  "info": {
    "singularName": "service",
    "pluralName": "services",
    "displayName": "Service",
    "description": "Services offered by NCFG"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "order": {
      "type": "integer",
      "default": 0
    },
    "shortDescription": {
      "type": "text"
    },
    "fullDescription": {
      "type": "richtext"
    },
    "benefits": {
      "type": "component",
      "repeatable": true,
      "component": "shared.text-item"
    },
    "howWeWork": {
      "type": "component",
      "repeatable": true,
      "component": "shared.text-item"
    },
    "examples": {
      "type": "component",
      "repeatable": true,
      "component": "service.service-example"
    },
    "cta": {
      "type": "component",
      "repeatable": false,
      "component": "shared.call-to-action"
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::service-category.service-category",
      "inversedBy": "services"
    }
  }
}
