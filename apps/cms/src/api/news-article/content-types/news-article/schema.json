{
  "kind": "collectionType",
  "collectionName": "news_articles",
  "info": {
    "singularName": "news-article",
    "pluralName": "news-articles",
    "displayName": "News Article",
    "description": "News and announcements"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "body": {
      "type": "richtext"
    },
    "anonsImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::blog-category.blog-category",
      "inversedBy": "news_articles",
      "required": true
    },
    "publishedDate": {
      "type": "date"
    }
  }
}
